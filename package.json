{
    "name": "figma-graphql",
    "version": "1.3.0",
    "description": "The reimagined Figma API (super)powered by GraphQL",
    "main": "index.js",
    "scripts": {
        "start": "node ./src/main.js",
        "dev": "nodemon ./src/main.js",
        "docs:dev": "docz dev",
        "docs:build": "docz build",
        "docs:deploy": "gh-pages -d .docz/dist",
        "format": "prettier --write '**/*.{js,css,md,ts,json}' *.{js,css,md,ts,json}",
        "test": "jest --no-cache --setupFiles dotenv/config",
        "lint": "eslint src/ --ext .js",
        "commit": "yarn git-cz",
        "semantic-release": "semantic-release"
    },
    "keywords": [
        "figma",
        "design",
        "tools",
        "graphql",
        "api"
    ],
    "author": "Bernardo Raposo <hi@bernardoraposo.com> (https://github.com/braposo)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/braposo/figma-graphql.git"
    },
    "dependencies": {
        "apollo-server-express": "^2.4.8",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.16.4",
        "figma-js": "^1.6.1",
        "graphql": "^14.2.1",
        "graphql-iso-date": "^3.6.1",
        "graphql-playground-middleware-express": "^1.7.12",
        "graphql-resolve-batch": "^1.0.2",
        "graphql-tools": "^4.0.4",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.11",
        "nodemon": "^1.18.11",
        "shades": "^2.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@commitlint/prompt": "^7.5.0",
        "@commitlint/travis-cli": "^7.5.2",
        "@semantic-release/changelog": "^3.0.2",
        "@semantic-release/git": "^7.0.8",
        "all-contributors-cli": "^6.3.1",
        "codecov": "^3.3.0",
        "commitizen": "^3.1.1",
        "cz-conventional-changelog": "2.1.0",
        "docz": "^1.1.0",
        "docz-theme-default": "^1.1.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "gh-pages": "^2.0.1",
        "husky": ">=1",
        "jest": "^24.7.1",
        "lint-staged": ">=8",
        "prettier": "^1.17.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "semantic-release": "^15.13.3"
    },
    "now": {
        "alias": "figma-graphql"
    },
    "lint-staged": {
        "*.{js,css,md}": [
            "prettier --write",
            "git add"
        ],
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
