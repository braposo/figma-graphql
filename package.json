{
  "name": "figma-graphql",
  "version": "1.3.0",
  "description": "A GraphQL connector for the Figma API",
  "main": "index.js",
  "scripts": {
    "start": "node ./src/main.js",
    "dev": "nodemon ./src/main.js",
    "format": "prettier --write '**/*.{js,css,md}'",
    "posttest": "yarn run format",
    "test": "eslint ."
  },
  "keywords": [
    "figma",
    "design",
    "tools",
    "graphql",
    "api"
  ],
  "author": "Bernardo Raposo <hi@bernardoraposo.com> (https://github.com/braposo)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/braposo/figma-graphql.git"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "figma-js": "^1.2.1",
    "graphql": "^0.13.2",
    "graphql-iso-date": "^3.5.0",
    "graphql-tools": "^2.23.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.5",
    "shades": "^1.11.0"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.11.1"
  },
  "now": {
    "alias": "figma-graphql"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
